{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "providers": ["node"],
      "phases": {
        "install": {
          "cmds": [
            "npm install",
            "cd client && npm install && cd .."
          ]
        },
        "build": {
          "cmds": [
            "npm run build",
            "cd client && npm run build && cd .."
          ]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "node dist/index.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}